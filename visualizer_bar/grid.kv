#:kivy 1.0.9
#:import utils kivy.utils

<GridElement>:
    size: 32, 32
    size_hint: None, None
    canvas:
        Color:
            rgb: 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

<GridArray>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#282828')
        Rectangle:
            pos: self.pos
            size: self.size

    padding: 32
    spacing: 8
    rows: 4

<GridController>:
    canvas.before:
        Color:
            rgb: 0, 0, 0

    BoxLayout:
        id: controller_box
        orientation: 'vertical'
        size: self.parent.size

        GridArray:
            size_hint: 1, 0.75
            pos_hint: {'center': 1}

        BoxLayout:
            id: panel_box
            orientation: 'horizontal'
            size_hint: 1, 0.25

            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#404040')
                Rectangle:
                    pos: self.pos
                    size: self.size
